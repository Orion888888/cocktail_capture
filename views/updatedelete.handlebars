<div>
    {{#if updated}}
    <p>RECIPE HAS BEEN UPDATED</p>
    {{/if}}
    <h2>Update Recipe</h2>
    <form id="update-form">
        <input type="hidden" id="id" name="id" value="{{recipe.id}}">
        <div>
            <label for="cocktail-name">Cocktail Name: </label>
            <input type="text" id="cocktail-name" value="{{recipe.name}}" />
        </div>
        <div>
            <label for="recipe-input" >Recipe: </label>
            <input type="text" id="recipe-input" value="{{recipe.description}}" />
        </div>
        <div>
            <button type="submit">Update</button>
        </div>
    </form>
    <form id="delete-form">
        <input type="hidden" id="id" name="id" value="{{recipe.id}}">
        <button type="submit">Delete</button>
    </form>
</div>
<script src="../../js/updatedelete.js"></script>