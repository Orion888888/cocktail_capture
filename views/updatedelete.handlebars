<div>
    <h2>Update Recipe</h2>
    <form id="update-form">
        <input type="hidden" id="id" name="id" value="{{recipe.id}}">
        <div>
            <label for="cocktail-name" value="{{recipe.name}}">Cocktail Name: </label>
            <input type="text" id="cocktail-name" />
        </div>
        <div>
            <label for="recipe-input" value="{{recipe.description}}">Recipe: </label>
            <input type="text" id="recipe-input" />
        </div>
        <div>
            <button type="submit">Update</button>
        </div>
    </form>
    <form id="delete-form">
        <input type="hidden" id="id" name="id" value="{{recipe.id}}">
        <button type="submit">Delete</button>
    </form>
</div>
<script src="../js/updatedelete.js"></script>